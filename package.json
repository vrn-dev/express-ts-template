{
  "name": "express-ts-template",
  "version": "1.0.0",
  "description": "Node ExpressJS TypeScript Template",
  "main": "dist/index.js",
  "scripts": {
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "tjest": "jest",
    "dev": "tsc-watch --onSuccess \"nodemon ./dist/index.js\" | ./node_modules/bunyan/bin/bunyan",
    "start": "tsc && node ./dist/index.js",
    "test:sample": "jest --testPathPattern /__tests__/",
    "coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vrn-dev/express-ts-template.git"
  },
  "author": "Vaisakh Nair",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vrn-dev/express-ts-template/issues"
  },
  "homepage": "https://github.com/vrn-dev/express-ts-template#readme",
  "dependencies": {
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "mongoose": "^5.2.6",
    "bunyan": "^1.8.12"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/bunyan": "^1.8.4",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/mongoose": "^5.2.3",
    "@types/node": "^9.4.5",
    "@types/sinon": "^5.0.1",
    "@types/sinon-as-promised": "^4.0.10",
    "@types/sinon-mongoose": "^1.3.7",
    "@types/superagent": "^3.8.3",
    "@types/supertest": "^2.0.5",
    "jest": "^23.4.2",
    "nodemon": "^1.18.3",
    "sinon": "^6.1.4",
    "sinon-as-promised": "^4.0.3",
    "sinon-mongoose": "^2.2.1",
    "superagent": "^3.8.3",
    "supertest": "^3.1.0",
    "ts-jest": "^23.0.1",
    "ts-node": "^7.0.0",
    "tsc-watch": "^1.0.26",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  }
}
